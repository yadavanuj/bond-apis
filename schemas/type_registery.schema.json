{
  "$id": "type_registry.schema.json",
  "type": "object",
  "required": ["type_id", "name", "sensitivity", "validation"],
  "properties": {
    "type_id": {
      "type": "string",
      "description": "Globally unique type identifier (e.g., EMAIL, PAN)"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name"
    },
    "sensitivity": {
      "type": "string",
      "description": "Registry-backed sensitivity identifier"
    },
    "description": {
      "type": "string"
    },
    "validation": {
      "$ref": "#/$defs/validation"
    },
    "keywords": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Lexical triggers/hints for scanning"
    },
    "aliases": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Semantic synonyms for mapping"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Conceptual metadata labels"
    },
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "status": {
      "enum": ["ACTIVE", "DEPRECATED"]
    }
  },
  "$defs": {
    "validation": {
      "type": "object",
      "properties": {
        "length": {
          "$ref": "#/$defs/length_constraint"
        },
        "charset": {
          "type": "string",
          "description": "Reference to a CharsetRegistry ID"
        },
        "regex": {
          "type": "array",
          "items": { "type": "string" }
        },
        "checksum": {
          "type": "string",
          "description": "Optional checksum algorithm (e.g., LUHN)"
        },
        "composition": {
          "$ref": "#/$defs/composition"
        }
      }
    },
    "length_constraint": {
      "type": "object",
      "properties": {
        "exact": { "type": "integer" },
        "min": { "type": "integer" },
        "max": { "type": "integer" }
      }
    },
    "composition": {
      "type": "object",
      "description": "Rules describing internal structure",
      "properties": {
        "structure": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "charset_id": { "type": "string" },
              "structural_info": {
                "anyOf": [
                  { "type": "object" },
                  { "type": "array" }
                ]
              }
            }
          }
        }
      }
    }
  }
}
